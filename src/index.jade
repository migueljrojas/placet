extends _layouts/base

include ./_modules/slider/slider
include ./_modules/content-block/content-block

block content
    main.home
        section.home__hero
            .home__hero__layer
            +slider('home__hero__slider')
                each item in site.data.slider
                    .home__hero__slide
                        .home__hero__slide__image
                            img(src=item.image)
                        .home__hero__data
                            +content-block('', item.title, item.text, {'text':item.linkText, 'url':item.url}, 'white', '', '', 'false')
                        
        section.home__main
            .home__main__container.home__main__container--instagram
                .home__main__follow
                    +content-block('instagram', '', 'Obtenga inspiracion diaria', {'text':'síganos', 'url':'https://www.instagram.com/'})
                .home__main__images
                    .home__main__image
                        img(src='/images/home/square1.jpg')
                    .home__main__image
                        img(src='/images/home/square2.jpg')

            .home__main__container.home__main__container--login
                .home__main__login-container
                    +content-block('', 'conozca los beneficios de placèt', '', {'text':'ingresar', 'url':'/beneficios'})
        
        section.home__how-it-works
            .home__how-it-works__data
                +content-block('', 'como funciona placèt', 'Tu tiempo libre dedícalo a lo más importante, de tu imagen nos encargamos nosotros.', {'text':'ver mas', 'url':'/como-funciona'}, 'white' )
            .home__how-it-works__image-contaniner
                .home__how-it-works__image
                    img(src='/images/home/cta.png')
                    
        section.home__corporate
            .home__corporate__container
                .home__corporate__appoinment
                    .home__corporate__appoinment__data
                        +content-block('', 'agende su cita', 'Nuestro propósito es conocerte para ayudar a proyectar tu mejor estilo, en el momento y la comodidad del sitio que prefieras.', {'text':'agendar', 'url':'/agenda-tu-cita'}, 'white')
                .home__corporate__brands
                    .home__corporate__brands__data
                        +content-block('', 'marcas placèt', 'PLACET cuenta con tres marcas europeas de gran tradición como AUSTIN REED, CERRUTI 1881 y GUY LAROCHE. Descúbrelas.', {'text':'ver marcas', 'url':'/marcas'})
            .home__corporate__container
                .home__corporate__referals
                    .home__corporate__referals__data
                        +content-block('', 'plan de referidos', 'Invita a tus amigos a ser parte del Club de Referidos PLACET y acumula el 10% de sus compras, en tu cuenta PLACET.', {'text':'ver plan', 'url':'/referidos'})
                .home__corporate__giftcard
                    +content-block('', 'regalale una giftcard placèt', '', '', 'white')
                    .home__corporate__giftcard__wrapper
                        .home__corporate__giftcard__image
                            img(src='/images/home/card.png')
                    +content-block('', '', '', {'text':'ver mas', 'url':'/tarjeta-de-regalo'})
    .home__intro
        .home__intro__video.embed-responsive
            iframe.embed-responsive-item(src="https://www.youtube.com/embed/3gYegr3ZW7I?autoplay=1&mute=1&controls=0&showinfo=0&rel=0&modestbranding=1")
            .home__intro__backdrop
        
        .home__intro__overlay
            .home__intro__logo
